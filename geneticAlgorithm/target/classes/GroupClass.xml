<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.laba.Mappers.GroupClassMapper">

    <insert id="create">
        INSERT INTO group_class (group_id, class_id)
        VALUES(#{groupId},#{classId})
    </insert>

    <select id="selectAll" resultType="com.solvd.laba.Mappers.GroupClassMapper">
        SELECT * FROM group_class
    </select>

    <select id="selectById" parameterType="int" resultType="com.solvd.laba.Mappers.GroupClassMapper">
        SELECT * FROM group_class WHERE group_id = #{group_id}
    </select>

    <delete id="delete">
        DELETE FROM group_class WHERE group_id = #{groupId}
    </delete>

    <update id="update">
        UPDATE group_class SET class_id = #{classId} WHERE group_id = #{groupId}
    </update>

</mapper>