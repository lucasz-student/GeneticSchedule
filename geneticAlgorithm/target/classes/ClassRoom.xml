<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.laba.Mappers.ClassRoomMapper">

    <insert id="create">
        INSERT INTO class (class_id, class_name, teacher_id)
        VALUES (#{id},#{name}, #{teacher_id})
    </insert>

    <select id="selectAll" resultType="com.solvd.laba.Model.Classes.ClassRoom">
        SELECT * FROM class
    </select>

    <select id="selectById" parameterType="int" resultType="com.solvd.laba.Model.Classes.ClassRoom">
        SELECT * FROM class WHERE class_id = #{id}
    </select>

    <delete id="delete">
        DELETE FROM class WHERE class_id = #{id}
    </delete>

    <update id="update">
        UPDATE class SET class_name = #{name} WHERE class_id = #{id}
    </update>

</mapper>